#include <iostream>
#include <vector>
#include <ctime>
using namespace std;


char MapaSamolotow[60][10];

class Samolot
{

	int x;
	int y;
	int poziomLotu;
	char litera;
public:
	Samolot() : litera('X') {}
	Samolot(const char& literka, const int &poziomLotku) : litera(literka), poziomLotu(poziomLotku) {}

	void zmianaY()
	{
		if (poziomLotu < 0)
		{
			y++;
			poziomLotu++;
		}
		else if (poziomLotu > 0)
		{
			y--;
			poziomLotu--;
		}
	}

	void wpiszKierunek(int komendaKierunek)
	{
		
	}

	void pokazSamolot()
	{
		cout << litera << endl;
		cout << poziomLotu << endl << endl;
	}

};

void wpiszKomende()
{
	
}


void Plansza()
{
	for (int i = 0; i < 62; i++)
		cout << "=";
	for (int i = 0; i < 10; i++)
	{
		cout << "|";
		for (int j = 0; j < 62; j++)
		{
			
		}
	}
}

void tworzenieSamolotu(vector<Samolot>& samoloty, int &licznikSamolotow)
{
	int poziomLotu = rand() % 11;
	samoloty.emplace_back((char(66 + licznikSamolotow)), poziomLotu); //tworzy obiekt + odrazu działa konstruktor który wpisuje mu daną litere w liście inicjalizacyjnej
	samoloty[licznikSamolotow].pokazSamolot();
	licznikSamolotow++;
}

int main()
{
	srand(time(NULL));
	vector <Samolot> samoloty;
	int liczbaSamolotow = 0;

	tworzenieSamolotu(samoloty, liczbaSamolotow);
	tworzenieSamolotu(samoloty, liczbaSamolotow);

	
}
